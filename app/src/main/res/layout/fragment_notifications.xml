<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <ImageView
        android:id="@+id/image_faq"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/tab_bantuan"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/image_faq"
        app:layout_constraintBottom_toBottomOf="parent">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_call_center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/new_call_center"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="45dp"
                android:layout_marginTop="16dp"/>

            <!-- ImageButton WhatsApp -->

            <!-- ImageButton Telepon -->


            <ImageButton
                android:id="@+id/button_wa"
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:layout_marginStart="1dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/center_wa"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.24"
                app:layout_constraintStart_toEndOf="@id/image_call_center"
                app:layout_constraintTop_toTopOf="@id/image_call_center" />

            <ImageButton
                android:id="@+id/imagebutton_telepon"
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:layout_marginTop="6dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/center_telepon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/button_wa"
                app:layout_constraintTop_toBottomOf="@id/button_wa" />

            <ImageButton
                android:id="@+id/tanya1"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="6dp"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/faq1"
                app:layout_constraintTop_toBottomOf="@id/image_call_center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                android:id="@+id/tanya2"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="16dp"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/new_faq2"
                app:layout_constraintTop_toBottomOf="@id/tanya1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                android:id="@+id/tanya3"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="16dp"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/new_faq3"
                app:layout_constraintTop_toBottomOf="@id/tanya2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                android:id="@+id/tanya4"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="16dp"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/faq4"
                app:layout_constraintTop_toBottomOf="@id/tanya3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                android:id="@+id/tanya5"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="16dp"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/faq5"
                app:layout_constraintTop_toBottomOf="@id/tanya4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                android:id="@+id/tanya6"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="16dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/faq6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tanya5" />

            <ImageButton
                android:id="@+id/tanya7"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="16dp"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/faq7"
                app:layout_constraintTop_toBottomOf="@id/tanya6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                android:id="@+id/tanya8"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="16dp"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/faq8"
                app:layout_constraintTop_toBottomOf="@id/tanya7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/kosongfaq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="58dp"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tanya8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
